$shadow_button()
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, .16), 0 2px 10px 0 rgba(0, 0, 0, .12)
$shadow_input()
  box-shadow 0 4px 6px rgba(50, 50, 93, .11), 0 1px 3px rgba(0, 0, 0, .08)

$border-input = #bdc3c7

$base_form_el_size()
  padding 0 1em
  height 2.25em
  font-size .85rem


// base SIZE el

input // :not([type=color]):not([type=radio]):not([type=checkbox]),
.select,
select:not([multiple]),
textarea,
.btn, button
  outline 0
  $base_form_el_size()
  border-radius .3em


