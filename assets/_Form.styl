$base_form_el_size()
  padding 0 1em
  height 2.4em

input:not([type="range"]):not([type="color"]), select, textarea
  $shadow_input()
  font-family "Roboto Condensed", sans-serif // inherit
  line-height 1.2

input, select, .btn, button, .btn_icon, textarea
  vertical-align middle
  font-size .8rem
  // $size_Mod()

// base SIZE el
input:not([type=color]):not([type=radio]):not([type=checkbox]), .select, select:not([multiple]), textarea, .btn, button
  $base_form_el_size()
  border-radius .3em

// input FOCUS
input:not([type=color]):not([type=range]):not([type=radio]):not([type=checkbox]):not([readonly]), .select, select, textarea
  border 1px solid $border-input
  &:focus
    border-radius 0
    border-top-color $link

