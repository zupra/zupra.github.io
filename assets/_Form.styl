// FIELDS
input:not([type="range"]):not([type="color"]),
select,
textarea
  $shadow_input()
  font-family "Roboto Condensed", sans-serif // inherit
  line-height 1.2
  // vertical-align middle

// input FOCUS
input:not([type=color]):not([type=range]):not([type=radio]):not([type=checkbox]):not([readonly]),
.select, select, textarea
  border 1px solid $border-input
  &:focus
    border-radius 0
    border-top-color $link



