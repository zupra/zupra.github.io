@import "__var"

*
  margin 0
  padding 0
  box-sizing border-box

:root
  font 100% / 1.4 "Roboto", "Helvetica Neue", sans-serif
  // @media (max-width: 460px)
  //   font-size 14px

body
  color $text
  text-rendering: optimizeSpeed;
  // font-family: 'Source Sans Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  // Отключает масштабирование текста в горизонтальной ориентации
  -webkit-text-size-adjust: 100%;
  // -moz-osx-font-smoothing: grayscale;
  // -webkit-font-smoothing: antialiased;


@import "__layout"
@import "__utility"

@import "_Form"
@import "_Grid"
@import "_Card"
@import "_Table"
@import "_List"

@import "__El"
@import "__Text"

@import "__@Utilities"

.Wrap
  padding 4em 1em 1em
  margin auto
  max-width 1200px

.MainFullWidth
  margin 4em 1em 3em

a, .link
  color $link

.link
  text-decoration underline
  cursor pointer

.H1, .H2
  line-height 1
  margin-bottom 4px // .5rem

.H1
  font-size 2em

.H2
  font-size 1.5em

h1, h2, h3, h4, h5
  line-height 1
  margin 0 0 1em

h1, h2
  color $header
  font-weight 400

p
  margin-bottom .75em
