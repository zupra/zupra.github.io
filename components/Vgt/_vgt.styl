.VGT_100w .vgt-table
  width 100%

// ===========
.vgt-table
  // !!!
  // width 100%  -> .w_100
  // !!!
  font-family "Roboto Condensed", sans-serif
  td, th
    border-right 1px solid #dee2e6
    &:last-child
      border-right 0
  th
    cursor pointer
    user-select none
    span:before
      content "⇅ " // ⬍
    &:hover
      border-bottom-color #C7CEDE
  tbody
    tr
      &:nth-child(even)
        background ghostwhite
      &:hover
        background #fffce1 // lavender // #FFF
        outline 2px solid #ff9800
        outline-offset -2px
        color #444

// >>> UTILS for EL

// 10 rows selected +clear
.vgt-selection-info-row
  position absolute
  right 0
  top 0
  display flex
  align-items center
  a
    margin 0 .5em

.VGT_rightBlock
  float right
  position relative
  z-index 1

.img_hoverScale
  width 32px
  position relative
  transition transform .3s
  &:hover
    z-index 1
    transform scale(4)
    outline 1px solid #3498db

.vgt_TextOverflow
  max-width 20vw
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

