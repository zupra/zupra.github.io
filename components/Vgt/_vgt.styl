.nowrap, th
  white-space nowrap

.vgt-wrap
  position relative // for loading

.vgt-loading
  position absolute
  z-index 10
  left 50%
  // top 50%
  transform translate(-50%, -50%)
  color #ec4758
  font-size 3em

.is-loading
  filter blur(5px)

.sorting
  background #EEE
  border-bottom-color #3abaae
  &:after
    color #26a69a
    // content "⇅ "
  &-desc
    &:after
      content " ⬆ "
  &-asc
    &:after
      content " ⬇ "

// FOOTER
.vgt-wrap__footer
  display flex
  justify-content space-between
  background #EEE
  padding .5em 1em

.footer__navigation
  margin-left 1em
  display flex
  align-items center
  &__info
    margin 0 1em
  &__page-info
    padding 0 1em
  &__page-btn
    outline none
    text-decoration none
    padding 0 1em
    height 2em
    border-radius .3em
    display inline-flex
    align-items center
    justify-content center
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, .16), 0 2px 10px 0 rgba(0, 0, 0, .12)
    cursor pointer
    user-select none
    transition background .3s
    background #3498db
    color #fff
    // &:active
    // transform translateY(2px)
    &:hover
      background #48acef

Search()
  padding-left 2.4em !important
  background #FFF url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='13' height='13'><g stroke-width='2' stroke='blueviolet'><circle cx='5' cy='5'  r='4' style='fill:none;' /><line x1='9' y1='9' x2='13' y2='13' /></g></svg>") 1em 50% no-repeat

// UTILS
.vgt-global-search input
  font-size 1em
  Search()

.filter-th input
  // width 100%
  min-width 100%
  width 7em
  Search()

